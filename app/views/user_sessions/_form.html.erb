<!-- login form -->
<li class="login-form"> <i class="fa fa-user"></i> 
<ul class="drop-down hover-expand">
<%#= form_for @user_session, :as => :user_session, :url => { :action => "create" },:html => {:class=>"login-form"} do |f| %>
<%= form_for @user_session, :as => :user_session,:html => {:class=>"login-form"} do |f| %>
   <%#= render "shared/error_messages", :target => @user_session %>
  <table>
    <tbody>
      <tr>
          <td colspan="2">
            <%= f.text_field :email , :class => "fa fa-camera-retro", :placeholder => "Your email address"  %>
             </td>
      </tr>
      <tr>
          <td colspan="2">
            <%= f.password_field :password , :placeholder => "Password" %>
            </td>
      </tr>
      <tr>
          <td>
            <%= f.submit "Login" %>
          </td>
          <td>
            <%= f.check_box :remember_me %><%= f.label "Keep me signed in" , :style => "margin-top: 3px;"%>
          </td>
      </tr>
    </tbody>
  </table>
<% end %>

</ul>